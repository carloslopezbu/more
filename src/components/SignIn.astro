---
import { Dog, Palette, Shrimp } from "@lucide/astro"; // Icono de lucide
const { class: className = "" } = Astro.props;

let currentIcon = 1;

function updateCounter() {
    currentIcon = (currentIcon + 1) % 3;
}
---

<div class={`flex flex-col gap-6 ${className}`}>
    <form>
        <div class="flex flex-col gap-6">
            <!-- Encabezado con icono -->
            <div class="flex flex-col items-center gap-2">
                <button
                    id="iconbutton"
                    class="flex flex-col items-center gap-2 font-medium"
                    onclick="updateCounter()"
                >
                    <div
                        class="flex h-8 w-8 items-center justify-center rounded-md"
                    >
                        {currentIcon === 0 && <Dog class="h-16 w-16" />}
                        {currentIcon === 1 && <Palette class="h-16 w-16" />}
                        {currentIcon === 2 && <Shrimp class="h-16 w-16" />}
                    </div>
                </button>
                <h1 class="text-xl font-bold">Bienvenido a MoreLandia.</h1>
            </div>

            <!-- Email y botón de login -->
            <div class="flex flex-col gap-6">
                <div class="grid gap-3">
                    <label for="email" class="text-sm font-medium">Email</label>
                    <input
                        id="email"
                        type="email"
                        placeholder="m@example.com"
                        required
                        class="w-full rounded-md border border-gray-300 px-3 py-2 focus:border-violet-400 focus:ring focus:ring-violet-200 outline-none"
                    />
                </div>
                <button
                    type="submit"
                    class="w-full bg-violet-400 hover:bg-violet-500 text-white font-semibold py-2 rounded-md transition-colors duration-300"
                >
                    Iniciar sesión
                </button>
            </div>

            <!-- Separador -->
            <div class="relative text-center text-sm my-4">
                <div class="absolute inset-0 top-1/2 border-t border-gray-300">
                </div>
                <span class="bg-white relative z-10 px-2 text-gray-500"
                    >O también</span
                >
            </div>

            <!-- Botón de Google -->
            <div class="flex items-center justify-center">
                <button
                    type="button"
                    class="w-full flex items-center justify-center border border-gray-300 rounded-md py-2 gap-2 hover:bg-gray-100 transition-colors duration-300"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        class="h-5 w-5"
                    >
                        <path
                            d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"
                            fill="currentColor"></path>
                    </svg>
                    Inicia sesión con Google
                </button>
            </div>
        </div>
    </form>
</div>

<script is:inline>
    function handleLogin(event) {
        event.preventDefault();
        const email = event.target.querySelector("#email").value;
        alert(`Email ingresado: ${email}`);
    }
</script>

<script>
    import { Dog, Palette, Shrimp } from "@lucide/astro"; // Icono de lucide

    const Icons = [Dog, Palette, Shrimp];
    let currentIcon = 0;
    const iconSize = Icons.length;

    function updateCounter() {
        currentIcon = (currentIcon + 1) % 3;
    }
</script>
